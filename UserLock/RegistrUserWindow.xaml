<Window x:Class="UserLock.RegistrUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserLock"
        mc:Ignorable="d"
        Title="Регистрация" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center" MinWidth="150">

            <TextBox x:Name="tbName" Margin="10" />

            <Label Content="Имя" Margin="2" 
                   HorizontalAlignment="Center"/>
            
            <TextBox x:Name="tbLogin" Margin="10" />

            <Label Content="Логин" Margin="2" 
                   HorizontalAlignment="Center"/>

            <TextBox x:Name="tbPassword" Margin="10" />

            <Label Content="Пароль" Margin="2" 
                   HorizontalAlignment="Center"
                   />
            
            <TextBox x:Name="tbPasswordDouble" Margin="10" />

            <Label Content="Повторите Пароль" Margin="2" 
                   HorizontalAlignment="Center"
                   />

            <Button x:Name="btAdd" Content="Добавить"
                    Margin="2"  Click="btAdd_Click"
                    />
        </StackPanel>
    </Grid>
</Window>
